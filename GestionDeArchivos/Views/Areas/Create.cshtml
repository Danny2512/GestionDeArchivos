@model GestionDeArchivos.Data.Entities.Areas

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<flash dismissable="true" />
<body>

    <div class="row">
        <div class="col-md-4  offset-md-4">
            <div class="card bg-light mb-3" style="width: 450px; height: auto">
                <h5 class="card-header text-center"><i class="fa-solid fa-envelope text-navy"></i> Ingresar Área</h5>
                <div class="card-body ">
                    <form asp-action="Create" class="form1">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div>
                            <label asp-for="name" class="control-label"></label>
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group1 ">
                            <input type="submit" class="waves-effect waves-light btn-large" value="Guardar Área" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
    }
</body>
</html>